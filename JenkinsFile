pipeline {

    agent any
    stages {

        stage('Prendo il codice da git'){
            steps{
                cleanWs()
				git credentialsId: 'f8db74b3-0315-4066-a99a-8bffccc42b81', url: 'https://github.com/guerinog/JunitDemo.git'
            }
        }

        stage('Build'){
            steps{
                bat 'mkdir lib'
                bat 'cd lib/ ; wget https://repo1.maven.org/maven2/org/junit/platform/junit-platform-console-standalone/1.7.0/junit-platform-console-standalone-1.7.0-all.jar'
                bat 'cd src ; javac -cp "../lib/junit-platform-console-standalone-1.7.0-all.jar" calcolatrice.java calcolatriceTest.java Main.java'
            }
        }

        stage('Test'){
            steps{
                bat 'cd src/ ; java -jar ../lib/junit-platform-console-standalone-1.7.0-all.jar -cp "." --select-class calcolatriceTest --reports-dir="reports"'
                junit 'src/reports/*-jupiter.xml'
            }
        }

        stage('Deploy'){
            steps{
                bat 'cd src/ ; java Main' 
            }
        }
    }

}
